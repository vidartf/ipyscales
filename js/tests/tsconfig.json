{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "lib": ["dom", "es6"],
    "noEmitOnError": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES6",
    "outDir": "build",
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "src/*.ts",
    "../src/**/*.ts"
  ]
}
